<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/solid.min.css" integrity="sha512-WTx8wN/JUnDrE4DodmdFBCsy3fTGbjs8aYW9VDbW8Irldl56eMj8qUvI3qoZZs9o3o8qFxfGcyQocUY0LYZqzQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="../css/style.css">
  <title>Document</title>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-yellow">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Conquer</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
          <ul class="navbar-nav  mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" id="logout" aria-current="page">Log Out</a>
            </li>
          </ul>
        </div>
      </div>
    </nav> 
  </header>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <section class="my-3 m-game m-game--preparing-game">
            <header id="gameTopPannel" class="d-none">
              <h3 class="m-game__title"><strong></strong></h3>
              <div id="roundTitle" class="m-game__round-title d-none">Round <span></span></div>
            </header>
            <div id="roomMessage" class="m-game-message p-2 d-none">
            </div>
            <div id="roomConnectedMessage" class="m-game-messageConnected">
              <p>Jugadores conectados:</p>
              <ul></ul>
            </div>
            <div id="playButton" class="m-game-playButton"></div>
            <div id="waittingTurn" class="m-game-waitting-message d-none"></div>
            <canvias id="grid"></canvias>
            <div id="roomPannelInfo" class="m-game-pannelInfo w-100">
            </div>
          </section>
        </div>
        <div class="col-lg-4">
          <section class="my-3">
            <div class="m-user-item" id="my-user-box">
                <div class="m-user-item__image">
                  <div class="image">
                    <div class="a-avatar drag-item" id="avatarMobile" draggable='true' data-id="" data-color="" data-avatar=""><i class="fas fa-user"></i></div>
                  </div>
                  <p class="small text-center">Please drag<br>to room</p>
                </div>
                <div class="m-user-item__content">
                  <h3 class="m-user-item__name">USER NAME</h3>
                  <label>FAV ROOM</label>
                  <h4 class="m-user-item__room">ROOM 1</h4>
                </div>
              </div>
          </section>
          <section class="my-3">
            <div class="o-rooms-container">
              <div class="row d-flex flex-wrap justify-content-space-between">
                <div class="col-6 mb-3">
                  <article id="red-room-box" class="m-room-drop-item">
                    <div class="m-room-drop-item__header">
                      <h3 class="m-room-drop-item__name">ROOM 1</h3>
                      <div class="m-room-drop-item__total">
                        <p><span class="total">0</span>J</p>
                      </div>
                    </div>
                    <div class="m-room-drop-item__image">
                      <div class="image drop-item" id="itemDrop">
                      </div>
                    </div>
                  </article>
                </div>
                <div class="col-6 mb-3">
                  <article id="blue-room-box" class="m-room-drop-item">
                    <div class="m-room-drop-item__header">
                      <h3 class="m-room-drop-item__name">ROOM 2</h3>
                      <div class="m-room-drop-item__total">
                        <p><span class="total">0</span>J</p>
                      </div>
                    </div>
                    <div class="m-room-drop-item__image">
                      <div class="image drop-item" id="itemDrop">
                      </div>
                    </div>
                  </article>
                </div>
                <div class="col-6 mb-3">
                  <article id="green-room-box" class="m-room-drop-item">
                    <div class="m-room-drop-item__header">
                      <h3 class="m-room-drop-item__name">ROOM 3</h3>
                      <div class="m-room-drop-item__total">
                        <p><span class="total">0</span>J</p>

                      </div>
                    </div>
                    <div class="m-room-drop-item__image">
                        <div class="image drop-item" id="itemDrop">
                        </div>
                    </div>
                  </article>
                </div>
                <div class="col-6 mb-3">
                  <article id="orange-room-box" class="m-room-drop-item ยก">
                    <div class="m-room-drop-item__header">
                      <h3 class="m-room-drop-item__name">ROOM 4</h3>
                      <div class="m-room-drop-item__total">
                        <p><span class="total">0</span>J</p>
                      </div>
                    </div>
                    <div class="m-room-drop-item__image drop-item">
                      <div class="image "></div>
                    </div>
                  </article>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="../bundle.js" type="text/javascript"></script>
  <script>
    const dashBoardInitData = {
      boxRooms: [
        {id: 'red-room-box'},
        {id: 'blue-room-box'},
        {id: 'green-room-box'},
        {id: 'orange-room-box'}
      ]
    }
    const dasboard = new Conquer.Dashboard(dashBoardInitData);
    dasboard.init()

  </script>
</body>
</html>